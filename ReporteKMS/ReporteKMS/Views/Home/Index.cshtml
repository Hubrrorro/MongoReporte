@{
    ViewBag.Title = "Home Page";
}
<link href="~/Scripts/ECharts/lib/reset.css" rel="stylesheet" />
<style>
    h1 {
        line-height: 60px;
        height: 60px;
        background: #146402;
        text-align: center;
        font-weight: bold;
        color: #eee;
        font-size: 14px;
    }
    .ciculoverde {
    width: 20px;
    height: 20px;
    background-color: green;
    -webkit-border-radius: 20px;
    -moz-border-radius: 20px;
    border-radius: 20px;
  }
    .ciculorojo {
    width: 20px;
    height: 20px;
    background-color:red;
    -webkit-border-radius: 20px;
    -moz-border-radius: 20px;
    border-radius: 20px;
  }
